<Page x:Class="FantsyHospital.View.Pages.MainWindowPages.MainWindowNurse"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FantsyHospital.View.Pages.MainWindowPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainWindowNurse">

    <Grid>
        <GroupBox Header="Панель Медсестры" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#fff">
            <UniformGrid Columns="1">
                <Button x:Name="AllPatientsButton"
                    Style="{StaticResource MainButtonStyle}" 
                    Content="Все пациенты" Click="AllPatientsButton_Click"
                    Width="200"
                    Height="30"
                    Margin="10 10 10 10"/>
            </UniformGrid>
        </GroupBox>
    </Grid>
</Page>
