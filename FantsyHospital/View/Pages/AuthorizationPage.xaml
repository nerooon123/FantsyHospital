<Page x:Class="FantsyHospital.View.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FantsyHospital.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <UniformGrid Columns="2" 
                     VerticalAlignment="Center" 
                     HorizontalAlignment="Center" 
                     Width="450"
                     >

            <TextBlock Text="ЛОГИН:" Style="{StaticResource MainTextBlock}" />

            <TextBox x:Name="LoginTextBox"
                     Style="{StaticResource MainTextBoxStyle}"
                     Padding="10"
                     Margin="1 10 0 10"/>

            <TextBlock Text="ПАРОЛЬ:" Style="{StaticResource MainTextBlock}"/>

            <PasswordBox x:Name="PasswordTextBox" 
                         Padding="10"
                         Margin="1 10 0 10">

                <PasswordBox.Style>
                    <Style TargetType="{x:Type PasswordBox}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type PasswordBox}">
                                    <Border x:Name="border" CornerRadius="7" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                        <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </PasswordBox.Style>
            </PasswordBox>

            <Button x:Name="AuthButton" 
                    Style="{StaticResource MainButtonStyle}" 
                    Content="Войти" Click="AuthButton_Click"
                    Margin="0,0,1,15"/>

            <Button x:Name="RegButton" 
                    Style="{StaticResource MainButtonStyle}" 
                    Content="Регистрация" 
                    Click="RegButton_Click"
                    Margin="1,0,0,15"/>
        </UniformGrid>
    </Grid>
</Page>
