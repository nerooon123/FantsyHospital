<Page x:Class="FantsyHospital.View.Pages.ResourcePages.AdministrationPages.AddDepartmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FantsyHospital.View.Pages.ResourcePages.AdministrationPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddDepartmentPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Отделение" Grid.Row="0" Foreground="#fff" Margin="25">
            <DataGrid AutoGenerateColumns="false" x:Name="DepartmentDataGrid" Margin="1" IsReadOnly="True" ColumnWidth="*">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding IdDepartment}"/>
                    <DataGridTextColumn Header="Отделение" Binding="{Binding Department}"/>

                    <DataGridTemplateColumn Header="Действия">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="DepartmentDeleteButton" Content="Удалить" Click="DepartmentDeleteButton_Click" Style="{StaticResource MainButtonStyle}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>


        <StackPanel  VerticalAlignment="Top" 
                     HorizontalAlignment="Center" 
                     Width="600" Margin="0,51,0,0" Grid.Row="1"
                     >


            <UniformGrid Columns="2">
                <TextBlock Text="НАЗВАНИЕ ОТДЕЛЕНИЕ:" Style="{StaticResource MainTextBlock}" />

                <TextBox x:Name="DepartmentTextBox"
                     Style="{StaticResource MainTextBoxStyle}"
                     Padding="10"
                     Margin="1 10 0 10"/>


            </UniformGrid>

            <Button x:Name="AddButton" 
                    Style="{StaticResource MainButtonStyle}" 
                    Content="Добавить" 
                    Click="AddButton_Click"
                    Height="40"/>


        </StackPanel>
    </Grid>
</Page>
